<a href="#" class="switch_thumb">Switch Thumb</a>
<% @galleries.each do |gallery| %>
  <div id="gallery">
  	<% if gallery.artworks.length > 0 %>
	  <h2><%= gallery.name %></h2>
		<ul class="display">
		<% gallery.artworks.each do |artwork| %>
		  <li>
		    <div class="content_block">
		      <%= link_to image_tag(artwork.photo(:small)), artwork %>
		      <h2><%= artwork.name %> </h2>
		      <% unless artwork.description.nil? %>
		        <p><%= artwork.description %></p>
		      <% end %>
		    </div>
		  </li>
		<% end %>  
	  </ul>
	</div>
  <% end %>
<% end %>